        <div id="controls">
            <div class="btn-group">
                <button id="btn-bat" class="btn-add" onclick="addUniqueComponent('battery')">â• é›»æ± </button>
                <button id="btn-bulb" class="btn-add" onclick="addUniqueComponent('bulb')">ğŸ’¡ ç‡ˆæ³¡</button>
            </div>
            <div class="btn-group">
                <span>æ¸¬è©¦å°è±¡ï¼š</span>
                <button class="btn-box" onclick="addUniqueComponent('box', 'A')">Box A</button>
                <button class="btn-box" onclick="addUniqueComponent('box', 'B')">Box B</button>
                <button class="btn-box" onclick="addUniqueComponent('box', 'C')">Box C</button>
                <button class="btn-box" onclick="addUniqueComponent('box', 'D')">Box D</button>
            </div>
            <button class="btn-clear" onclick="clearCanvas()">ğŸ—‘ï¸ æ¸…é™¤ç•«é¢</button>
