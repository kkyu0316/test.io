        <!-- åµæ¢ç­†è¨˜ (ä½œç­”å€) -->
        <div class="quiz-section">
            <h3>ğŸ“ åµæ¢ç­†è¨˜ï¼šä½ çš„æ¨è«–æ˜¯ä»€éº¼ï¼Ÿ</h3>
            
            <div class="quiz-row">
                <span class="quiz-label">Box A æ˜¯...</span>
                <select id="guess-A" class="quiz-select">
                    <option value="">è«‹é¸æ“‡...</option>
                    <option value="battery">é›»æ±  (Battery)</option>
                    <option value="wire">é›»ç·š (Wire)</option>
                    <option value="bulb">ç‡ˆæ³¡ (Bulb)</option>
                    <option value="empty">ç©ºç›’ (Empty)</option>
                </select>
                <button class="quiz-check-btn" onclick="checkAnswer('A')">æª¢æŸ¥ç­”æ¡ˆ</button>
                <span id="result-A" class="quiz-result"></span>
            </div>

            <div class="quiz-row">
                <span class="quiz-label">Box B æ˜¯...</span>
                <select id="guess-B" class="quiz-select">
                    <option value="">è«‹é¸æ“‡...</option>
                    <option value="battery">é›»æ±  (Battery)</option>
                    <option value="wire">é›»ç·š (Wire)</option>
                    <option value="bulb">ç‡ˆæ³¡ (Bulb)</option>
                    <option value="empty">ç©ºç›’ (Empty)</option>
                </select>
                <button class="quiz-check-btn" onclick="checkAnswer('B')">æª¢æŸ¥ç­”æ¡ˆ</button>
                <span id="result-B" class="quiz-result"></span>
            </div>

            <div class="quiz-row">
                <span class="quiz-label">Box C æ˜¯...</span>
                <select id="guess-C" class="quiz-select">
                    <option value="">è«‹é¸æ“‡...</option>
                    <option value="battery">é›»æ±  (Battery)</option>
                    <option value="wire">é›»ç·š (Wire)</option>
                    <option value="bulb">ç‡ˆæ³¡ (Bulb)</option>
                    <option value="empty">ç©ºç›’ (Empty)</option>
                </select>
                <button class="quiz-check-btn" onclick="checkAnswer('C')">æª¢æŸ¥ç­”æ¡ˆ</button>
                <span id="result-C" class="quiz-result"></span>
            </div>

            <div class="quiz-row">
                <span class="quiz-label">Box D æ˜¯...</span>
                <select id="guess-D" class="quiz-select">
                    <option value="">è«‹é¸æ“‡...</option>
                    <option value="battery">é›»æ±  (Battery)</option>
                    <option value="wire">é›»ç·š (Wire)</option>
                    <option value="bulb">ç‡ˆæ³¡ (Bulb)</option>
                    <option value="empty">ç©ºç›’ (Empty)</option>
                </select>
                <button class="quiz-check-btn" onclick="checkAnswer('D')">æª¢æŸ¥ç­”æ¡ˆ</button>
                <span id="result-D" class="quiz-result"></span>
            </div>
        </div>
    </div>

<script>
    const canvas = document.getElementById('circuitCanvas');
    const ctx = canvas.getContext('2d');
    const statusDiv = document.getElementById('status');
    const btnBat = document.getElementById('btn-bat');
    const btnBulb = document.getElementById('btn-bulb');

    const SNAP_RADIUS = 30; 

    let components = [];
    let wires = [];
    let isShortCircuit = false;
    
    // äº’å‹•è®Šæ•¸
    let isDragging = false;
    let dragTarget = null;
    let wireStartNode = null;
    let mouseX = 0, mouseY = 0;
    let snapNode = null; 

    // --- ç­”é¡Œé‚è¼¯ ---
    const correctAnswers = {
        'A': 'battery',
        'B': 'empty',
        'C': 'wire',
        'D': 'bulb'
    };

    function checkAnswer(boxId) {
        const select = document.getElementById(`guess-${boxId}`);
        const resultSpan = document.getElementById(`result-${boxId}`);
        const userGuess = select.value;

        if (!userGuess) {
            resultSpan.innerHTML = "âš ï¸ è«‹å…ˆé¸æ“‡";
            resultSpan.style.color = "#e67e22";
            return;
        }

        if (userGuess === correctAnswers[boxId]) {
            resultSpan.innerHTML = "âœ… ç­”å°äº†ï¼";
            resultSpan.style.color = "#27ae60";
        } else {
            resultSpan.innerHTML = "âŒ å†æƒ³ä¸€æƒ³";
            resultSpan.style.color = "#c0392b";
        }
    }

    // --- æ¨¡æ“¬å™¨æ ¸å¿ƒ ---
    class Component {
        constructor(type, x, y, subType = null) {
            this.id = Date.now() + Math.random();
            this.type = type; 
            this.subType = subType;
            this.x = x;
            this.y = y;
            this.brightness = 0; 
            this.isOverheated = false;
            
            if (type === 'battery') {
                this.width = 80; this.height = 40;
                this.nodes = [ { id: 0, x: -45, y: 0 }, { id: 1, x: 45, y: 0 } ];
            } else if (type === 'bulb') {
                this.width = 40; this.height = 70;
                this.nodes = [ { id: 0, x: 0, y: 32 }, { id: 1, x: 16, y: 18 } ];
            } else if (type === 'box') {
                this.width = 100; this.height = 60;
                this.nodes = [ { id: 0, x: -50, y: 0 }, { id: 1, x: 50, y: 0 } ];
            }
        }

        getWorldNode(index) {
            return {
                x: this.x + this.nodes[index].x,
                y: this.y + this.nodes[index].y,
                parentId: this.id,
                nodeIndex: index,
                component: this
            };
        }
        
        checkNodeProximity(mx, my) {
            for(let i=0; i<this.nodes.length; i++) {
                let wn = this.getWorldNode(i);
                let dist = Math.sqrt((mx - wn.x)**2 + (my - wn.y)**2);
                if(dist < SNAP_RADIUS) return wn;
            }
            return null;
        }

        isMouseOverBody(mx, my) {
             let w = this.width, h = this.height;
             return mx > this.x - w/2 && mx < this.x + w/2 &&
                    my > this.y - h/2 && my < this.y + h/2;
        }
    }

    function init() {
        clearCanvas();
        requestAnimationFrame(draw);
    }

    function addUniqueComponent(type, subType = null) {
        if (type === 'battery' && components.some(c => c.type === 'battery')) {
            updateStatus("é™åˆ¶ï¼šåªèƒ½ä½¿ç”¨ä¸€é¡†é›»æ± ", true); return;
        }
        if (type === 'bulb' && components.some(c => c.type === 'bulb')) {
            updateStatus("é™åˆ¶ï¼šåªèƒ½ä½¿ç”¨ä¸€é¡†ç‡ˆæ³¡", true); return;
        }
        if (type === 'box') {
            let oldBox = components.find(c => c.type === 'box');
            if (oldBox) removeComponent(oldBox);
        }

        let startX = 250, startY = 250;
        if (type === 'bulb') { startX = 550; }
        if (type === 'box') { startX = 400; startY = 380; }

        components.push(new Component(type, startX, startY, subType));
        updateButtons();
        checkCircuit();
    }

    function removeComponent(comp) {
        components = components.filter(c => c.id !== comp.id);
        wires = wires.filter(w => w.startCompId !== comp.id && w.endCompId !== comp.id);
        updateButtons();
        checkCircuit();
    }

    function clearCanvas() {
        components = [];
        wires = [];
        updateButtons();
        checkCircuit();
        updateStatus("è«‹æ‹–æ›³å…ƒä»¶ä¸¦é€£æ¥é»‘é»");
    }

    function updateButtons() {
        btnBat.disabled = components.some(c => c.type === 'battery');
        btnBulb.disabled = components.some(c => c.type === 'bulb');
    }
    
    function updateStatus(msg, isError = false) {
        statusDiv.innerText = msg;
        statusDiv.className = isError ? "status-error" : "";
        if(isError) setTimeout(() => { statusDiv.className = ""; }, 2000);
    }

    // --- ç¹ªåœ– ---
    function draw() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        // å°ç·š
        ctx.lineCap = 'round'; ctx.lineJoin = 'round';
        wires.forEach(w => {
            let c1 = components.find(c => c.id === w.startCompId);
            let c2 = components.find(c => c.id === w.endCompId);
            if(c1 && c2) {
                let p1 = c1.getWorldNode(w.startNodeIdx);
                let p2 = c2.getWorldNode(w.endNodeIdx);
                
                if (w.isHot) {
                    ctx.strokeStyle = '#e74c3c'; ctx.lineWidth = 6; ctx.shadowColor='red'; ctx.shadowBlur=10;
                } else {
                    ctx.strokeStyle = '#34495e'; ctx.lineWidth = 4; ctx.shadowBlur=0;
                }
                ctx.beginPath(); ctx.moveTo(p1.x, p1.y); ctx.lineTo(p2.x, p2.y); ctx.stroke();
                ctx.shadowBlur = 0;
                
                ctx.fillStyle = w.isHot ? '#e74c3c' : '#7f8c8d';
                ctx.beginPath(); ctx.arc(p1.x, p1.y, 5, 0, Math.PI*2); ctx.fill();
                ctx.beginPath(); ctx.arc(p2.x, p2.y, 5, 0, Math.PI*2); ctx.fill();
            }
        });

        // æ‹‰ç·šé è¦½
        if (isDragging && wireStartNode) {
            let targetX = mouseX;
            let targetY = mouseY;
            let strokeColor = '#95a5a6';
            let lineWidth = 3;

            if (snapNode) {
                targetX = snapNode.x;
                targetY = snapNode.y;
                strokeColor = '#2ecc71'; lineWidth = 5;
            }

            ctx.strokeStyle = strokeColor; ctx.lineWidth = lineWidth; ctx.setLineDash([5, 5]);
            ctx.beginPath(); ctx.moveTo(wireStartNode.x, wireStartNode.y); ctx.lineTo(targetX, targetY); ctx.stroke(); ctx.setLineDash([]);

            if (snapNode) {
                ctx.beginPath(); ctx.arc(targetX, targetY, 10, 0, Math.PI*2);
                ctx.strokeStyle = '#2ecc71'; ctx.lineWidth = 2; ctx.stroke();
            }
        }

        // å…ƒä»¶
        components.forEach(c => {
            ctx.save();
            if (c.isOverheated) {
                let dx = (Math.random()-0.5)*4; let dy = (Math.random()-0.5)*4;
                ctx.translate(c.x+dx, c.y+dy);
            } else {
                ctx.translate(c.x, c.y);
            }

            if (c.type === 'battery') {
                ctx.fillStyle = c.isOverheated ? '#e74c3c' : '#95a5a6';
                ctx.fillRect(-40, -15, 80, 30);
                ctx.fillStyle = '#f39c12'; ctx.fillRect(-30, -15, 60, 30); ctx.strokeRect(-40, -15, 80, 30);
                ctx.fillStyle = '#bdc3c7'; ctx.fillRect(40, -8, 6, 16); ctx.strokeRect(40, -8, 6, 16);
                ctx.fillStyle = 'black'; ctx.font="bold 14px Arial"; ctx.fillText("+", 25, 5); ctx.fillText("-", -25, 4);
                drawNode(ctx, -45, 0, '#333', c, 0); drawNode(ctx, 45, 0, '#c0392b', c, 1);
            } 
            else if (c.type === 'bulb') {
                ctx.fillStyle = '#bdc3c7'; ctx.fillRect(-12, 10, 24, 18);
                ctx.strokeStyle='#7f8c8d'; ctx.beginPath(); ctx.moveTo(-12,14); ctx.lineTo(12,18); ctx.moveTo(-12,19); ctx.lineTo(12,23); ctx.stroke();
                ctx.fillStyle = '#2c3e50'; ctx.beginPath(); ctx.moveTo(-8,28); ctx.lineTo(8,28); ctx.lineTo(4,34); ctx.lineTo(-4,34); ctx.fill();
                
                let alpha = 0.3; let color = '230,230,230'; let blur = 0;
                if (c.brightness > 0.1) {
                    if (c.brightness < 1.0) { color = '255,249,196'; alpha = 0.9; blur = 15; } 
                    else if (c.brightness < 2.0) { color = '255,235,59'; alpha = 1.0; blur = 30; } 
                    else { color = '255,255,255'; alpha = 1.0; blur = 50; } 
                }
                ctx.shadowColor = `rgb(${color})`; ctx.shadowBlur = blur; ctx.fillStyle = `rgba(${color}, ${alpha})`;
                ctx.beginPath(); ctx.arc(0, -5, 20, 0, Math.PI*2); ctx.fill(); 
                ctx.lineWidth=1; ctx.strokeStyle='#bdc3c7'; ctx.stroke(); ctx.shadowBlur = 0;
                
                ctx.strokeStyle = (c.brightness > 0.1) ? '#fff' : '#7f8c8d'; ctx.lineWidth = 2;
                ctx.beginPath(); ctx.moveTo(-6,10); ctx.lineTo(-6,-5); ctx.lineTo(0,0); ctx.lineTo(6,-5); ctx.lineTo(6,10); ctx.stroke();
                drawNode(ctx, 0, 32, '#333', c, 0); drawNode(ctx, 16, 18, '#333', c, 1);
            } 
            else if (c.type === 'box') {
                ctx.fillStyle = c.isOverheated ? '#c0392b' : '#9b59b6';
                ctx.fillRect(-50, -30, 100, 60);
                ctx.lineWidth = 2; ctx.strokeStyle='white'; ctx.strokeRect(-50, -30, 100, 60);
                ctx.fillStyle = 'white'; ctx.font="bold 20px Arial"; ctx.fillText("Box " + c.subType, -30, 8);
                drawNode(ctx, -50, 0, '#333', c, 0); drawNode(ctx, 50, 0, '#333', c, 1);
            }
            ctx.restore();
        });

        requestAnimationFrame(draw);
    }

    function drawNode(ctx, x, y, color, comp, idx) {
        let isTarget = (snapNode && snapNode.parentId === comp.id && snapNode.nodeIndex === idx);
        let isStart = (wireStartNode && wireStartNode.parentId === comp.id && wireStartNode.nodeIndex === idx);
        
        ctx.beginPath();
        if (isTarget || isStart) {
            ctx.arc(x, y, 8, 0, Math.PI*2);
            ctx.fillStyle = '#2ecc71'; ctx.strokeStyle = '#27ae60'; ctx.lineWidth = 2;
        } else {
            ctx.arc(x, y, 5, 0, Math.PI*2);
            ctx.fillStyle = color; ctx.strokeStyle = '#fff'; ctx.lineWidth = 1;
        }
        ctx.fill(); ctx.stroke();
    }

    // --- äº‹ä»¶è™•ç† ---
    function getMousePos(e) {
        const rect = canvas.getBoundingClientRect();
        const scaleX = canvas.width / rect.width;
        const scaleY = canvas.height / rect.height;
        return { x: (e.clientX - rect.left) * scaleX, y: (e.clientY - rect.top) * scaleY };
    }

    canvas.addEventListener('mousedown', e => {
        const pos = getMousePos(e);
        for (let c of components) {
            let node = c.checkNodeProximity(pos.x, pos.y);
            if (node) { isDragging = true; wireStartNode = node; return; }
        }
        for (let i = components.length - 1; i >= 0; i--) {
            if (components[i].isMouseOverBody(pos.x, pos.y)) { isDragging = true; dragTarget = components[i]; return; }
        }
    });

    canvas.addEventListener('mousemove', e => {
        const pos = getMousePos(e);
        mouseX = pos.x; mouseY = pos.y;

        if (isDragging && dragTarget) { dragTarget.x = mouseX; dragTarget.y = mouseY; checkCircuit(); }

        snapNode = null;
        if (isDragging && wireStartNode) {
            for (let c of components) {
                let node = c.checkNodeProximity(mouseX, mouseY);
                if (node && (node.parentId !== wireStartNode.parentId || node.nodeIndex !== wireStartNode.nodeIndex)) {
                    snapNode = node; break;
                }
            }
        }
        
        let hoverAny = components.some(c => c.checkNodeProximity(mouseX, mouseY) || c.isMouseOverBody(mouseX, mouseY));
        canvas.style.cursor = hoverAny ? 'pointer' : 'default';
    });

    canvas.addEventListener('mouseup', e => {
        const pos = getMousePos(e);
        if (isDragging && wireStartNode) {
            let endNode = snapNode;
            if (!endNode) {
                for (let c of components) {
                    endNode = c.checkNodeProximity(pos.x, pos.y);
                    if (endNode) break;
                }
            }

            if (endNode && (endNode.parentId !== wireStartNode.parentId)) {
                let exists = wires.some(w => 
                    (w.startCompId === wireStartNode.parentId && w.endCompId === endNode.parentId && w.startNodeIdx === wireStartNode.nodeIndex && w.endNodeIdx === endNode.nodeIndex) ||
                    (w.endCompId === wireStartNode.parentId && w.startCompId === endNode.parentId && w.endNodeIdx === wireStartNode.nodeIndex && w.startNodeIdx === endNode.nodeIndex)
                );
                
                if (!exists) {
                    wires.push({
                        startCompId: wireStartNode.parentId, startNodeIdx: wireStartNode.nodeIndex,
                        endCompId: endNode.parentId, endNodeIdx: endNode.nodeIndex, isHot: false
                    });
                    checkCircuit();
                }
            }
        }
        isDragging = false; dragTarget = null; wireStartNode = null; snapNode = null;
    });

    canvas.addEventListener('dblclick', e => {
        const pos = getMousePos(e);
        let hitIdx = components.findIndex(c => c.isMouseOverBody(pos.x, pos.y));
        if (hitIdx >= 0) { removeComponent(components[hitIdx]); return; }

        let wIdx = wires.findIndex(w => {
            let c1 = components.find(c => c.id === w.startCompId);
            let c2 = components.find(c => c.id === w.endCompId);
            if (!c1 || !c2) return false;
            let p1 = c1.getWorldNode(w.startNodeIdx);
            let p2 = c2.getWorldNode(w.endNodeIdx);
            let dist = Math.abs((p2.y - p1.y) * pos.x - (p2.x - p1.x) * pos.y + p2.x * p1.y - p2.y * p1.x) / Math.sqrt((p2.y - p1.y)**2 + (p2.x - p1.x)**2);
            return dist < 10;
        });
        if (wIdx >= 0) { wires.splice(wIdx, 1); checkCircuit(); }
    });

    // --- ç‰©ç†æ ¸å¿ƒ ---
    function checkCircuit() {
        isShortCircuit = false;
        components.forEach(c => { c.brightness = 0; c.isOverheated = false; });
        wires.forEach(w => w.isHot = false);
        
        let powerSources = components.filter(c => c.type === 'battery' || (c.type === 'box' && c.subType === 'A'));
        if (powerSources.length === 0) { updateStatus("è«‹åŠ å…¥é›»æº"); return; }
        updateStatus("å¯¦é©—é€²è¡Œä¸­...");

        for (let source of powerSources) {
            let shortLoop = findShortLoop(source.id, 1, [], new Set(), source.id);
            if (shortLoop) {
                isShortCircuit = true;
                source.isOverheated = true;
                shortLoop.forEach(w => w.isHot = true);
                updateStatus("âš ï¸ çŸ­è·¯è­¦å‘Šï¼é›»è·¯éç†±ï¼", true);
            }
        }

        if (isShortCircuit) return; 

        for (let source of powerSources) {
            solveCircuit(source.id, 1, 1.5, 0, [], new Set(), source.id);
        }
    }

    function findShortLoop(currCompId, currNodeIdx, pathWires, visitedWires, sourceId) {
        let connectedWires = wires.filter(w => 
            (w.startCompId === currCompId && w.startNodeIdx === currNodeIdx) ||
            (w.endCompId === currCompId && w.endNodeIdx === currNodeIdx)
        );

        for (let w of connectedWires) {
            if (visitedWires.has(w)) continue;
            let nextCompId = (w.startCompId === currCompId) ? w.endCompId : w.startCompId;
            let nextNodeIdx = (w.startCompId === currCompId) ? w.endNodeIdx : w.startNodeIdx;
            let nextComp = components.find(c => c.id === nextCompId);
            if (!nextComp) continue;

            if (nextComp.id === sourceId && nextNodeIdx === 0) { pathWires.push(w); return pathWires; }
            if (nextComp.id === sourceId && nextNodeIdx === 1) continue;

            let isConductor = false;
            if (nextComp.type === 'box' && nextComp.subType === 'C') isConductor = true;
            if (nextComp.type === 'battery' || (nextComp.type === 'box' && nextComp.subType === 'A')) isConductor = true;

            if (isConductor) {
                let newVisited = new Set(visitedWires); newVisited.add(w);
                let newPath = [...pathWires, w];
                let exitNodeIdx = (nextNodeIdx === 0) ? 1 : 0;
                if (newPath.length < 10) {
                    let res = findShortLoop(nextComp.id, exitNodeIdx, newPath, newVisited, sourceId);
                    if (res) return res;
                }
            }
        }
        return null;
    }

    function solveCircuit(currCompId, currNodeIdx, V, R, path, visitedWires, sourceId) {
        let outgoingWires = wires.filter(w => 
            (w.startCompId === currCompId && w.startNodeIdx === currNodeIdx) ||
            (w.endCompId === currCompId && w.endNodeIdx === currNodeIdx)
        );

        outgoingWires.forEach(w => {
            if (visitedWires.has(w)) return;
            let nextCompId = (w.startCompId === currCompId) ? w.endCompId : w.startCompId;
            let nextNodeIdx = (w.startCompId === currCompId) ? w.endNodeIdx : w.startNodeIdx;
            let nextComp = components.find(c => c.id === nextCompId);
            if (!nextComp) return;

            if (nextComp.id === sourceId && nextNodeIdx === 0) {
                let current = (R > 0) ? V / R : 0;
                if (current > 0.1) {
                    path.forEach(item => { 
                        if (item.type === 'bulb') item.brightness = Math.max(item.brightness, current);
                    });
                }
                return;
            }
            if (nextComp.id === sourceId && nextNodeIdx === 1) return;

            let pass = false, dV = 0, dR = 0;
            if (nextComp.type === 'bulb') { pass = true; dR = 1.0; }
            else if (nextComp.type === 'box') {
                if (nextComp.subType === 'A') { pass = true; dV = (nextNodeIdx === 0) ? 1.5 : -1.5; }
                else if (nextComp.subType === 'C') { pass = true; dR = 0; }
                else if (nextComp.subType === 'D') { pass = true; dR = 1.0; }
            }
            else if (nextComp.type === 'battery') {
                pass = true; dV = (nextNodeIdx === 0) ? 1.5 : -1.5;
            }

            if (pass) {
                let exitNodeIdx = (nextNodeIdx === 0) ? 1 : 0;
                let newPath = [...path, nextComp];
                let newVisited = new Set(visitedWires); newVisited.add(w);
                if (path.length < 15) solveCircuit(nextComp.id, exitNodeIdx, V+dV, R+dR, newPath, newVisited, sourceId);
            }
        });
    }

    init();
</script>
</body>
</html>
