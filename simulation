        /* Answer Section */
        .quiz-section { margin-top: 30px; background: white; padding: 20px 30px; border-radius: 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.08); width: 100%; border-top: 5px solid #8e44ad; box-sizing: border-box; }
        .quiz-section h3 { margin-top: 0; color: #2c3e50; border-bottom: 2px solid #f0f0f0; padding-bottom: 10px; margin-bottom: 20px; }
        .quiz-row { display: flex; align-items: center; margin-bottom: 15px; padding: 10px; background: #f9f9f9; border-radius: 8px; flex-wrap: wrap; gap: 10px; }
        .quiz-label { font-weight: bold; width: 100px; color: #8e44ad; font-size: 1.1em; }
        .quiz-select { padding: 8px; border-radius: 5px; border: 1px solid #ccc; font-size: 1em; flex-grow: 1; min-width: 150px; }
        .quiz-check-btn { background-color: #27ae60; color: white; padding: 8px 15px; }
        .quiz-check-btn:hover { background-color: #219150; }
        .quiz-result { margin-left: 10px; font-weight: bold; min-width: 120px; }
        
